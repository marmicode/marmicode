{
  "projectType": "library",
  "sourceRoot": "libs/block-ui/src",
  "prefix": "marmicode",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/block-ui/src/**/*.ts",
          "libs/block-ui/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/block-ui/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["coverage/libs/block-ui"]
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/block-ui/.storybook",
        "browserTarget": "block-ui:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputDir": "dist/storybook/recipe-ui",
        "configDir": "libs/block-ui/.storybook",
        "browserTarget": "block-ui:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "generators": {},
  "tags": ["scope:block", "type:ui"]
}
