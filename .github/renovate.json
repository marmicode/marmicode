{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base", ":semanticCommitScopeDisabled"],
  "automerge": true,
  "automergeType": "branch",
  "baseBranches": ["main"],
  "updateInternalDeps": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "branch",
    "commitMessageAction": "ðŸ“¦ lock file maintenance",
    "semanticCommitType": "build"
  },
  "rangeStrategy": "update-lockfile",
  "commitMessage": "{{{commitMessagePrefix}}} ðŸ“¦ {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}",
  "packageRules": [
    {
      "matchPackagePatterns": ["^@angular/", "^@nrwl/", "nx"],
      "groupName": "Nrwl workspace",
      "enabled": false
    },
    {
      "packagePatterns": ["*"],
      "semanticCommitType": "build"
    },
    {
      "depTypeList": ["dependencies"],
      "semanticCommitType": "fix"
    }
  ]
}
